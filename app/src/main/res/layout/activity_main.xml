<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.davidsgk.minicalc.MainActivity"
    android:padding="10dp"
    android:weightSum="13"
    android:background="#222222"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/output"
        android:layout_weight="4.75"
        android:textColor="#FFFFFF"
        android:gravity="bottom|end"
        android:maxLines="6"
        android:scrollbars="vertical"
        android:textSize="30dp"
        android:background="@drawable/ripple_number"/>

    <Space
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="0.25" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:weightSum="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:weightSum="1">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:weightSum="1"
                android:layout_weight="0.25">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="7"
                    android:id="@+id/button_7"
                    android:layout_weight="0.333333333333333333"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp"
                    android:background="@drawable/ripple_number"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="8"
                    android:id="@+id/button_8"
                    android:layout_weight="0.333333333333333333"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp"
                    android:background="@drawable/ripple_number" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="9"
                    android:id="@+id/button_9"
                    android:layout_weight="0.333333333333333333"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp"
                    android:background="@drawable/ripple_number" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:weightSum="1"
                android:layout_weight="0.25">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="4"
                    android:id="@+id/button_4"
                    android:layout_weight="0.333333333333333333"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp"
                    android:background="@drawable/ripple_number" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="5"
                    android:id="@+id/button_5"
                    android:layout_weight="0.333333333333333333"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp"
                    android:background="@drawable/ripple_number" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="6"
                    android:id="@+id/button_6"
                    android:layout_weight="0.333333333333333333"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp"
                    android:background="@drawable/ripple_number" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:weightSum="1"
                android:layout_weight="0.25">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="1"
                    android:id="@+id/button_1"
                    android:layout_weight="0.333333333333333333"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp"
                    android:background="@drawable/ripple_number" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="2"
                    android:id="@+id/button_2"
                    android:layout_weight="0.333333333333333333"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp"
                    android:background="@drawable/ripple_number" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="3"
                    android:id="@+id/button_3"
                    android:layout_weight="0.333333333333333333"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp"
                    android:background="@drawable/ripple_number" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:weightSum="1"
                android:layout_weight="0.25">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="."
                    android:id="@+id/button_decimal"
                    android:layout_weight="0.333333333333333333"
                    android:background="@drawable/ripple_special"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="0"
                    android:id="@+id/button_0"
                    android:layout_weight="0.333333333333333333"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp"
                    android:background="@drawable/ripple_number" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="(-)"
                    android:id="@+id/button_negative"
                    android:layout_weight="0.333333333333333333"
                    android:background="@drawable/ripple_special"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:weightSum="1">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="+"
                    android:id="@+id/button_add"
                    android:layout_weight="0.5"
                    android:background="@drawable/ripple_operator"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="DEL"
                    android:id="@+id/button_del"
                    android:layout_weight="0.5"
                    android:background="@drawable/ripple_del"
                    android:textColor="#FFFFFF"
                    android:textSize="18dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="x"
                    android:id="@+id/button_multiply"
                    android:layout_weight="0.5"
                    android:background="@drawable/ripple_operator"
                    android:textColor="#FFFFFF"
                    android:capitalize="none"
                    android:textSize="15dp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="("
                    android:id="@+id/button_bracketL"
                    android:layout_weight="0.5"
                    android:background="@drawable/ripple_operator"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="-"
                    android:id="@+id/button_subtract"
                    android:layout_weight="0.5"
                    android:background="@drawable/ripple_operator"
                    android:textColor="#FFFFFF"
                    android:textSize="24dp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text=")"
                    android:id="@+id/button_bracketR"
                    android:layout_weight="0.5"
                    android:background="@drawable/ripple_operator"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="/"
                    android:id="@+id/button_divide"
                    android:layout_weight="0.5"
                    android:background="@drawable/ripple_operator"
                    android:textColor="#FFFFFF"
                    android:textSize="15dp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="^"
                    android:id="@+id/button_exponent"
                    android:layout_weight="0.5"
                    android:background="@drawable/ripple_operator"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="="
                    android:id="@+id/button_return"
                    android:layout_weight="0.333333333333333333"
                    android:background="@drawable/ripple_equal"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
